<input type="submit" value="PrÃ³ximo" id="next">
</form>
<script src="/signup/script.js"></script>
<script>
    onload = ()=>{
    photo.setAttribute('src', `https://avatars.githubusercontent.com/${localStorage.getItem('user')}`)
}

    function VerifyLabels(){
    if(firstname.value != '' && lastname.value != '' && email.value != ''){
        BNext.allow()
        next.addEventListener("click", ()=>{
            localStorage.setItem('name', firstname.value)
            localStorage.setItem('lastname', lastname.value)
            localStorage.setItem('email', email.value)
        })
    }else{
        BNext.block()
    }
}

    firstname.addEventListener("keyup", function(){
        this.value = LabelCorretor(this.value)
        VerifyLabels()
    })
    lastname.addEventListener("keyup", function(){
        this.value = LabelCorretor(this.value)
        VerifyLabels()
    })
    email.addEventListener("keyup", function(){
        this.value = LabelCorretor(this.value)
        this.value = this.value.replaceAll(this.value,this.value.toLowerCase())
        VerifyLabels()
    })

</script>
