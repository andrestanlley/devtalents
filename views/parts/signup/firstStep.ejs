</form>
<script src="/signup/script.js"></script>
<script>

    let username

    user.addEventListener("keyup", ()=>{
    user.value[0] == '@'?username=user.value.replace('@',''):username=user.value
    const ModifyPhoto = ()=>{
        clearTimeout(TimeRequest)
        username == ''?photo.setAttribute('src', defaultphoto):photo.setAttribute('src', `https://avatars.githubusercontent.com/${username}`
        )}
    const TimeRequest = setTimeout(ModifyPhoto, 2000)
    user.value = LabelCorretor(user.value)
    user.value = user.value.replaceAll(user.value, user.value.toLowerCase())
})

    age.addEventListener("change", ()=>{
        if(Number(age.value) < 13){
            age.style.color = "red"
        }else{
            age.style.color = "grey"
            user.value != ''?BNext.allow():BNext.block()
        }
    })


next.addEventListener("click", ()=>{
    localStorage.setItem('user', username)
    localStorage.setItem('age', age.value)
})
</script>
